<HeliosSdk:HeliosPropertyEditor x:Class="GadrocsWorkshop.Helios.Controls.CustomGaugeAppearanceEditor" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"                      
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Height="Auto" d:DesignWidth="180" d:DesignHeight="362">
    <Grid Background="Transparent" Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="4,10,2,2" FontSize="12" FontWeight="Bold">Background Plate</TextBlock>
        <Label Grid.Column="0" Grid.Row="1" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Image used for the backgroud.</Label.ToolTip> Image
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="1" ImageFilename="{Binding Control.BGPlateImage, Mode=TwoWay}" />

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="4,10,2,2" FontSize="12" FontWeight="Bold">Needle</TextBlock>
        <Label Grid.Column="0" Grid.Row="3" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Image used for the Needle.</Label.ToolTip> Image
        </Label>
        <HeliosSdk:ImagePicker Grid.Column="1" Grid.Row="3" ImageFilename="{Binding Control.KnobImage, Mode=TwoWay}" />
        <Label Grid.Column="0" Grid.Row="4 " FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Scale of the Needle relative to gauge vertical size.</Label.ToolTip> Scale
        </Label>
                    <Slider Grid.Column="1" Grid.Row="4" Minimum="0" Maximum="1" Value="{Binding Control.Needle_Scale}" Margin="2" GotFocus="Scale_GotFocus"/>


        <Label Grid.Column="0" Grid.Row="6" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Position X of the Needle relative to gauge.</Label.ToolTip> Position X
        </Label>
        <Slider Grid.Column="1" Grid.Row="6" Minimum="0" Maximum="1" Value="{Binding Control.Needle_PosX}" Margin="2" GotFocus="Needle_posX_GotFocus"/>
        <Label Grid.Column="0" Grid.Row="7" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Position Y of the Needle relative to gauge.</Label.ToolTip> Position Y
        </Label>
        <Slider Grid.Column="1" Grid.Row="7" Minimum="0" Maximum="1" Value="{Binding Control.Needle_PosY}" Margin="2" GotFocus="Needle_posX_GotFocus" />
        
        
        <Label Grid.Column="0" Grid.Row="8" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Pivot X of the Needle relative to his size.</Label.ToolTip> Pivot X
        </Label>
        <Slider Grid.Column="1" Grid.Row="8" Minimum="0" Maximum="1" Value="{Binding Control.Needle_PivotX}" Margin="2" GotFocus="PivotX_GotFocus"/>
        <Label Grid.Column="0" Grid.Row="9" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Pivot Y of the Needle relative to his size.</Label.ToolTip> Pivot Y
        </Label>
        <Slider Grid.Column="1" Grid.Row="9" Minimum="0" Maximum="1" Value="{Binding Control.Needle_PivotY}" Margin="2" GotFocus="PivotY_GotFocus"/>

       
        
        
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10
                   " Margin="4,10,2,2" FontSize="12" FontWeight="Bold">Rotation</TextBlock>
        <Label Grid.Column="0" Grid.Row="12" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Position of the Neddle at the minimum value.</Label.ToolTip> Min
        </Label>
        <Slider Grid.Column="1" Grid.Row="12" Minimum="0" Maximum="360" Value="{Binding Control.InitialRotation}" Margin="2" GotFocus="MinPosition_GotFocus"/>
        <Label Grid.Column="0" Grid.Row="13" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>Position of the Neddle at the maximum value.</Label.ToolTip> Max
        </Label>
        <Slider Grid.Column="1" Grid.Row="13" Minimum="0" Maximum="360" Value="{Binding Control.RotationTravel}" Margin="2" GotFocus="MaxPosition_GotFocus" />
        
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
