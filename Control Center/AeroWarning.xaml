<Window x:Class="GadrocsWorkshop.Helios.ControlCenter.AeroWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aero Not Detected" Height="138" Width="402" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="False" WindowStartupLocation="CenterScreen" Icon="Helios.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" TextWrapping="Wrap" Margin="5" BorderThickness="0">Helios has detected that Aero desktop is not enabled.  This can cause significant impact to simulation framerate while Helios is displayed.  Please re-enable an Aero theme for full performance.</TextBox>
        <CheckBox Name="DisplayAgainCheckbox" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5">Do not display this warning again.</CheckBox>
        <Button Grid.Row="1" Margin="5" HorizontalAlignment="Right" Width="60" Click="Button_Click">Ok</Button>
    </Grid>
</Window>
